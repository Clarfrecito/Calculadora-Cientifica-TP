package calculadora.cientifica;

import java.util.ArrayList;
import java.util.Scanner;

public class CalculadoraCientificaf {

    public static void main(String[] args) {
        ArrayList<String> numeros = new ArrayList();
        Scanner scan = new Scanner(System.in);
        int contador = 0;
        System.out.println(" *Ingrese toda la operacion en notacion polaca inversa* ");
        System.out.println(" *Ingrese off para apagar la calculadora* ");
        numeros.add(scan.nextLine());
        if (numeros.get(0).equals("off")) {
            System.out.println(" *Sistema Apagado* ");
        }else{ /*/else {
            while (((((!numeros.get(contador).equals("+")) && (!numeros.get(contador).equals("-")) && !numeros.get(contador).equals("/") && (!numeros.get(contador).equals("X")) && (!numeros.get(contador).equals("V")) && (!numeros.get(contador).equals("X^")))))) {
                numeros.add(scan.nextLine());
                contador++;
            }
            System.out.println(""+numeros);
        }/*/
        for(int i=0; i<5; i++){
            numeros.add(scan.nextLine());
        }
        System.out.println(""+numeros);
        for (int i = 0; i < numeros.size(); i++) {
            if (numeros.get(i-1).equals("+")) {
                System.out.println("entra al if");
                String resultado = calcularSuma(numeros.get(i - 2), numeros.get(i - 1));    
                numeros.remove(2);
                numeros.remove(3);
                numeros.add(2,resultado);
                System.out.println(""+numeros);
            } else {
                if (numeros.get(i).equals("/")) {
                    calcularDiv(numeros.get(i - 2), numeros.get(i - 1));
                    numeros.remove(2);
                    numeros.remove(3);
                } else {
                    if (numeros.get(i).equals("x")) {
                        calcularMult(numeros.get(i - 2), numeros.get(i - 1));
                        numeros.remove(2);
                        numeros.remove(3);
                    } else {
                        if (numeros.get(i).equals("V")) {
                            calcularRaiz(numeros.get(i - 2), numeros.get(i - 1));
                            numeros.remove(2);
                            numeros.remove(3);
                        } else {
                            if (numeros.get(i).equals("-")) {
                                calcularResta(numeros.get(i - 2), numeros.get(i - 1));
                                numeros.remove(2);
                                numeros.remove(3);
                            } else {
                                if (numeros.get(i).equals("X^")) {
                                    calcularPote(numeros.get(i - 2), numeros.get(i - 1));
                                    numeros.remove(2);
                                    numeros.remove(3);
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

    public static String calcularSuma(String n1, String n2) {
        double num1, num2, resultado;
        String r;
        num1 = Double.parseDouble(n1);
        num2 = Double.parseDouble(n2);
        resultado = num1 + num2;
        r = String.valueOf(resultado);
        return r;
    }

    public static double calcularResta(String n1, String n2) {
        double num1, num2, resultado;
        num1 = Double.parseDouble(n1);
        num2 = Double.parseDouble(n2);
        resultado = num1 - num2;
        return resultado;
    }

    public static double calcularMult(String n1, String n2) {
        double num1, num2, resultado;
        num1 = Double.parseDouble(n1);
        num2 = Double.parseDouble(n2);
        resultado = num1 * num2;
        return resultado;
    }

    public static double calcularDiv(String n1, String n2) {
        double num1, num2, resultado;
        num1 = Double.parseDouble(n1);
        num2 = Double.parseDouble(n2);
        resultado = num1 / num2;
        return resultado;
    }

    public static double calcularRaiz(String n1, String n2) {
        double num1, num2, resultado;
        num1 = Double.parseDouble(n1);
        num2 = Double.parseDouble(n2);
        resultado = Math.pow(num1, 1.0 / num2);
        return resultado;
    }

    public static double calcularPote(String n1, String n2) {
        double num1, num2, resultado;
        num1 = Double.parseDouble(n1);
        num2 = Double.parseDouble(n2);
        resultado = Math.pow(num1, num2);
        return resultado;
    }
}
